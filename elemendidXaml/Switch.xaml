<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="elemendidXaml.Switch">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Green">
            <Label Text="Переключатель" FontSize="Large" HorizontalOptions="Center" BackgroundColor="Black" TextColor="White"/>
            <Switch IsToggled="true" VerticalOptions="CenterAndExpand"
             HorizontalOptions="Center" Toggled= "Switch_Toggled" />
            <Label x:Name="label" FontSize="Large" 
       HorizontalOptions = "Center" VerticalOptions = "CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
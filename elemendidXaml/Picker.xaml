<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="elemendidXaml.Picker">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="header" Text="Языки программирования" FontSize="Large" />
            <Picker x:Name="picker" SelectedIndexChanged="picker_SelectedIndexChanged">
                <Picker.Items>
                    <x:String>C#</x:String>
                    <x:String>C/C++</x:String>
                    <x:String>JavaScript</x:String>
                    <x:String>PHP</x:String>
                    <x:String>Swift</x:String>
                    <x:String>Go</x:String>
                    <x:String>Python</x:String>
                    <x:String>Java</x:String>
                    <x:String>Kotlin</x:String>
                    <x:String>Rust</x:String>

                </Picker.Items>
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>